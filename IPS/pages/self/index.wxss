}
.x-right_{
  width:30rpx;
  height:30rpx;
  margin-top:30rpx;
}
.price_{
  width:50rpx;
  height:50rpx;
  margin:20rpx;
}

.business_{
  display:flex;
  flex-direction: row;
  margin-top:20rpx;
}
.business_left_{
 width:150rpx;
 padding:10rpx;
 border-bottom:1px solid #E4F7FF;
