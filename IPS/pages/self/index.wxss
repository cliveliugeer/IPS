.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #E4F7FF;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.jifen_{
  width:100%;
  background-color: #E4F7FF;
  display: flex;
  flex-direction: row;
}
.jifen_lr_{
  margin-top:50rpx;
  width:50%;
  text-align: center;
  font-size: 30rpx;
  color:#444646;
}
.jifen_item_{
  margin-bottom:20rpx;
}
.strip_{
  margin-top:10rpx;
  width:100%;
  height:10rpx;
  background-color:#F8F8F8;
}
.bill_{
  width:100%;
  display:flex;
  flex-direction: row;
  border-bottom: 1px solid #F8F8F8;
}
text{
  margin:28rpx;
  font-size:28rpx;
